# ================================
# Application Settings
# ================================
APP_NAME=OCR Document Intelligence System
VERSION=1.0.0
DEBUG=true

# ================================
# Database
# ================================
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=ocr_system

# ================================
# Security
# ================================
SECRET_KEY=change-this-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ================================
# File Upload
# ================================
UPLOAD_DIR=uploads
MAX_FILE_SIZE=52428800
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.tiff,.tif,.pdf,.docx,.doc,.xlsx,.xls

# ================================
# CORS
# ================================
CORS_ORIGINS=http://localhost:4200
